<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" styleClass="panel" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.bibfx.control.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text styleClass="h3" text="Sistema de Gestión de Biblioteca"/>
    
    <VBox spacing="10">
        <Label text="Usuario:"/>
        <TextField fx:id="txtUsuario" promptText="Ingrese su usuario"/>
    </VBox>
    
    <VBox spacing="10">
        <Label text="Contraseña:"/>
        <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña"/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ingresar" onAction="#handleLogin" styleClass="btn,btn-primary"/>
        <Button text="Cancelar" onAction="#handleCancel" styleClass="btn,btn-secondary"/>
    </HBox>
    
    <Label fx:id="lblMensaje" styleClass="text-danger"/>
</VBox> 